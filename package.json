{
  "name": "pi-extensions",
  "version": "1.0.0",
  "private": true,
  "description": "Extensions for pi, the AI coding agent",
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "check": "bun run lint && bun run typecheck",
    "check:ci": "biome ci . && tsc -p tsconfig.json --noEmit",
    "test": "vitest run"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "pi",
    "pi-package",
    "pi-packages",
    "pi-extensions",
    "pi-coding-agent",
    "extensions",
    "ai",
    "ai-provider",
    "coding-assistant"
  ],
  "pi": {
    "extensions": [
      "./packages/ast/src/index.ts",
      "./packages/lsp/src/index.ts",
      "./packages/mcp/src/index.ts",
      "./packages/web-access/src/index.ts"
    ]
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.40.5",
    "@biomejs/biome": "^2.3.5",
    "@mariozechner/pi-ai": "*",
    "@mariozechner/pi-coding-agent": "*",
    "@sinclair/typebox": "^0.34.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.8"
  },
  "trustedDependencies": [
    "@ast-grep/cli"
  ],
  "license": "MIT"
}
